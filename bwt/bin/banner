#!/bin/bash
set -e
CR=$'\n'

source /ez/util.sh

if [ "$(svstat bwt ready)" == "true" ]; then
  # Buffer into a variable so there's no delay between the logo and the banner
  banner=$(wget -T1 -qO - --user="." --password="$(printcontenv AUTH_TOKEN)" --auth-no-challenge \
           http://$(printcontenv BIND_ADDR):3060/banner.txt | tail -n +7 || true)

  [ "$1" == "-s" ] && banner="$banner${CR}${CR} SUPPORT DEV: üöÄ  bc1qmuagsjvq0lh3admnafk0qnlql0vvxv08au9l2d Ôºè https://btcpay.shesek.info"
fi

cat << EZ

             ‚ñÄ‚ñà‚ñÄ‚ñÄ‚ñà ‚ñà‚ñÄ‚ñÄ‚ñà‚ñÄ
              ‚ñà‚ñÄ ‚ñÑ  ‚ñÑ‚ñÄ ‚ñÑ
             ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ
$banner${banner:+$CR }
EZ

#     ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó
#     ‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ïê‚ïù ‚ïö‚ïê‚ïê‚ñà‚ñà‚ñà‚ïî‚ïù
#     ‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó     ‚ñà‚ñà‚ñà‚ïî‚ïù
#     ‚ñà‚ñà‚ïî‚ïê‚ïê‚ïù    ‚ñà‚ñà‚ñà‚ïî‚ïù
#     ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó
#     ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù
